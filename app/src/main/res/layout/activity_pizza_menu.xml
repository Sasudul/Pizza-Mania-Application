<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#000"
    tools:context=".MenuActivity">

    <!-- ðŸ”¥ Top Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B71C1C"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="Pizza Mania"
        app:titleTextColor="@android:color/white" />

    <!-- ðŸ”¥ Special Deal Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#E53935"
            android:padding="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/italian_spicy_chicken_pizza" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Today's Special Deal"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="18sp"
                android:paddingTop="6dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Italian Spicy Chicken Pizza + 2 Coca-Cola Bottles - Just Rs. 3999 (Today Only!)"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:paddingTop="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- ðŸ”¥ Dynamic Pizza List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/pizzaRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp" />

</LinearLayout>
