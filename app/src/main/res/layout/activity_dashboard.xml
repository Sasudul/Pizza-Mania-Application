<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/wood_pizza"
    android:padding="20dp"
    tools:context="AdminDashboard">

        <!-- Header Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/header_gradient"
            android:paddingHorizontal="16dp"
            android:elevation="6dp">


            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/chef_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pizza Mania"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="22sp"
                android:layout_marginStart="12dp"/>
        </LinearLayout>

        <!-- Middle Content (Buttons) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/btnViewOrders"
                android:layout_width="296dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/red"
                android:text="View Orders"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnAddItems"
                android:layout_width="295dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/red"
                android:text="Add New Items"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnViewEmployees"
                android:layout_width="294dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/red"
                android:text="View Employees"
                android:textColor="@android:color/white"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnAddEmployees"
                android:layout_width="299dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/red"
                android:text="Add Employees"
                android:textColor="@android:color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Footer -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="#000000"
            android:layout_alignParentBottom="true"
            android:text="Â© 2025 Pizza Mania - Taste the Difference"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </LinearLayout>
